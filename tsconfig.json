{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "jsx": "react",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "rootDirs": ["src", "stories"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "typings/**/*.d.ts", "stories/**/*"],
    "exclude": ["node_modules", "dist"]
}
